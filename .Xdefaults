/* !################ */
/* # Xft Settings # */
/* ################ */
Xft.dpi:	96
Xft.antialias:	true
Xft.rgba:	rgb
Xft.hinting:	true
Xft.hintstyle:	hintslight

/* ################# */
/* # URXVT Settings# */
/* ################# */

URxvt.depth: 32
URxvt.geometry:	90x30
URxvt.loginShell: true
URxvt.internalBorder: 3
URxvt.lineSpace: 0

/* # transparancy true or false(default) */
/* # URxvt*transparent: true */

/* # scrollbar - true (default) or false */
URxvt*scrollBar: true

/* # scrollbar position - left=false (default) or right=true */
URxvt*scrollBar_right: false

/* # scrollbar style - rxvt (default), plain, next, or xterm */
URxvt*scrollstyle: plain

urxvt*font: xft:Inconsolata:pixelsize=13,xft:Inconsolata\ for\ Powerline:pixelsize=14
urxvt*boldFont: xft:Inconsolata:pixelsize=13,xft:Inconsolata\ for\ Powerline:pixelsize=14

